# Database
DATABASE_URL=postgresql://username:password@localhost:5432/ugc_ad_generator

# JWT Secrets
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here

# AI Strategy Configuration (August 2025)
AI_STRATEGY_VERSION=v1-cost-optimized
# Options: v1-cost-optimized, v2-quality-first, v3-speed-optimized, v4-balanced

# AI Provider API Keys
GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# AI Provider Enable/Disable Flags
GEMINI_ENABLED=true
GROQ_ENABLED=true
OPENAI_ENABLED=true

# Token Limits (per generation)
AI_INPUT_TOKENS_PER_GENERATION=1000
AI_OUTPUT_TOKENS_PER_GENERATION=2000
AI_TOTAL_TOKENS_PER_GENERATION=3000

# Budget Controls
AI_DAILY_BUDGET=50.0
AI_MONTHLY_BUDGET=500.0
AI_MAX_COST_PER_GENERATION=0.005

# Alert Thresholds (percentage)
AI_DAILY_ALERT_THRESHOLD=80
AI_MONTHLY_ALERT_THRESHOLD=85

# LemonSqueezy
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key_here
LEMONSQUEEZY_WEBHOOK_SECRET=your_webhook_secret_here

# OAuth - Google
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# App Config
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
PRODUCTION_FRONTEND_URL=https://hookly.xyz

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM_EMAIL=noreply@hookly.com

# Admin Configuration
ADMIN_EMAILS=admin@hookly.com,admin@yourdomain.com